.radar-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.device-info {
  text-align: center;
  margin-bottom: 30px;
}

.device-name {
  font-size: 20px;
  font-weight: bold;
  display: block;
  margin-bottom: 10px;
}

.device-rssi,
.device-distance {
  font-size: 16px;
  color: #666;
  display: block;
  margin-top: 8px;
}

.radar-view {
  width: 300px;
  height: 300px;
  border-radius: 50%;
  border: 2px solid #ccc;
  position: relative;
  transition: transform 0.2s ease;
}

.compass-directions {
  width: 100%;
  height: 100%;
  position: relative;
}

.compass-directions text {
  position: absolute;
  font-size: 16px;
}

.direction-n { top: 10px; left: 50%; transform: translateX(-50%); }
.direction-s { bottom: 10px; left: 50%; transform: translateX(-50%); }
.direction-e { right: 10px; top: 50%; transform: translateY(-50%); }
.direction-w { left: 10px; top: 50%; transform: translateY(-50%); }

.signal-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 4px;
  transform-origin: center;
}

.arrow {
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 20px solid #ff4d4f;
  position: absolute;
  right: 40px;
  top: -8px;
}

.tips {
  margin-top: 30px;
  text-align: center;
}

.tips text {
  display: block;
  margin: 10px 0;
  color: #666;
} 